<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.beepteam.truemetronome.SimpleMetronomeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/SS_BTN"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <TextView android:id="@+id/bpm" android:text="BPM" android:layout_width="70dp"
        android:layout_height="45dp"/>
    <EditText android:id="@+id/bpmValue" android:layout_width="70dp" android:layout_height="45dp"
        android:layout_below="@+id/bpm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:inputType="phone"/>
    <TextView android:id="@+id/measure" android:text="Beats per Bar" android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_below="@+id/bpmValue"/>
    <EditText android:id="@+id/measureValue" android:layout_width="70dp" android:layout_height="45dp"
        android:layout_below="@+id/measure"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:inputType="phone"/>

</RelativeLayout>
