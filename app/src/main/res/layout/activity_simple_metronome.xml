<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.beepteam.truemetronome.SimpleMetronomeActivity">

    <TextView android:id="@+id/bpm"
        android:text="BPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textColor="#000"/>

    <EditText android:id="@+id/bpmValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:shadowColor="#000"
        android:textColorHighlight="#000"
        android:textColorHint="#000"
        android:textColorLink="#000"
        android:singleLine="true"
        android:inputType="phone"
        android:digits="1234567890"
        android:layout_toEndOf="@+id/bpm"
        android:layout_toRightOf="@+id/bpm"
    />

    <TextView android:id="@+id/measure"
        android:text="Beats per Bar"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bpm"
        android:layout_margin="@dimen/activity_vertical_margin"/>

    <Spinner
        android:id="@+id/measureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bpm"
        android:layout_toEndOf="@+id/measure"
        android:layout_toRightOf="@+id/measure"
        android:entries="@array/beats_array"
        android:prompt="@string/defaultMeasure"
        android:layout_margin="@dimen/activity_vertical_margin"/>


    <Button
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="Start"
        android:textColor="#000"
        android:id="@+id/SS_BTN"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button"
        android:scaleType="fitXY"/>

</RelativeLayout>
