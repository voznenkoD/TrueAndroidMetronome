<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.beepteam.truemetronome.SimpleMetronomeActivity">

    <TextView android:id="@+id/measure"
        android:text="Beats per Bar"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"/>

    <Spinner
        android:id="@+id/measureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/measure"
        android:layout_toRightOf="@+id/measure"
        android:entries="@array/beats_array"
        android:prompt="@string/defaultMeasure"
        android:layout_margin="@dimen/activity_vertical_margin"/>


    <TextView
        android:id="@+id/currentBPM"
        android:text="bmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/measureValue"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin"/>

    <com.beepteam.truemetronome.RoundKnobButton
        android:id="@+id/jogView"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />


    <Button
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="Start"
        android:textColor="#000"
        android:id="@+id/SS_BTN"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button"
        android:scaleType="fitXY"/>

</RelativeLayout>
